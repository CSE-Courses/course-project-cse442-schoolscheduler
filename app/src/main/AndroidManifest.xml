<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.schoolscheduler">

    <uses-permission android:name="android.permission.INTERNET" />

    <application

        android:allowBackup="true"
        android:icon="@drawable/baseline_menu_book_black_48dp"
        android:label="Scheduler"
        android:roundIcon="@drawable/baseline_menu_book_black_48dp"
        android:supportsRtl="true"
        android:theme="@style/Theme.schoolscheduler">

        <activity
            android:name=".userLogin"
            android:label="Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

       <!--Task Part-->
        <activity
            android:name=".TaskPage.AddNewTask"
            android:label="Add"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".TaskPage.EditTaskContent"
            android:label="Edit"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".TaskPage.Task"
            android:label="Tasks"
            android:screenOrientation="portrait">
        </activity>

        <!--Task Part-->

    </application>

</manifest>
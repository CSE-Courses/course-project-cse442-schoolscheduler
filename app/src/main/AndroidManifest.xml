<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.schoolscheduler">

    <uses-permission android:name="android.permission.INTERNET" />

    <application

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.schoolscheduler">

<!--Login/Signup-->
        <activity android:name=".userSignUp"></activity>

<!--MainPage-->
        <activity android:name=".userLogin">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CalendarPage"></activity>
        <activity android:name=".CreateTask"></activity>
        <activity android:name=".TaskList"></activity>
        <activity android:name=".Main_Page"></activity>


<!--Settings Part-->
        <activity android:name=".profile"></activity>
        <activity android:name=".general"></activity>
        <activity android:name=".settings" ></activity>

<!--Task Part-->
        <activity
            android:name=".TaskPage.AddNewTask"
            android:label="Add"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".TaskPage.EditTaskContent"
            android:label="Edit"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".TaskPage.Task"
            android:label="Tasks"
            android:screenOrientation="portrait">
        </activity>



    </application>

</manifest>
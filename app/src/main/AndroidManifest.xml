<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.schoolscheduler">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".TaskPage.Global"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.schoolscheduler">

<!--Login/Signup-->

        <!--MainPage-->

        <activity android:name=".Main_Page"></activity>


<!--Settings Part-->


<!--Task Part-->
        <activity
            android:name=".TaskPage.AddNewTask"
            android:label="Add"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".TaskPage.EditTaskContent"
            android:label="Edit"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".TaskPage.Task">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".TaskPage.AddNewTask$AlarmReceiver" />


    </application>



</manifest>